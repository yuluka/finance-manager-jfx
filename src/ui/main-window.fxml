            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ingresos">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#seeIncomes" text="Ver ingresos" />
                  <MenuItem mnemonicParsing="false" onAction="#filterIncomes" text="Ver ingresos filtrados" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Balance">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#seeBalance" text="Ver balance" />
